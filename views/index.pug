extends layout

block content
  article.slds-card
    .slds-card__header.slds-grid
      header.slds-media.slds-media_center.slds-has-flexi-truncate
        .slds-media__figure
          span.slds-icon_container.slds-icon-standard-contact(title="contact")
            svg.slds-icon.slds-icon_small(aria-hidden="true")
              use(xlink:href="/icons/standard-sprite/svg/symbols.svg#contact")
            span.slds-assistive-text contact
        .slds-media__body
          h2.slds-card__header-title
            a.slds-card__header-link.slds-truncate(href="javascript:void(0);" title="Card Header")
              span= title
    .slds-card__body.slds-card__body_inner
      form.js-settings-form
        .slds-form-element
          div#step1.step
            label.slds-form-element__label(for="DropdownOptions") Type
            .slds-form-element__control
              .slds-select_container
                select#DropdownOptions.slds-select.js-activity-setting(name='dropdownOptions')
                  each dropdownOption in dropdownOptions
                    option(value=dropdownOption.value)= dropdownOption.name

            label.slds-form-element__label.slds-p-top_medium(for='Text')
              abbr.slds-required(title='required')
              | Text *
            .slds-form-element__control
              input#Text.slds-input.js-activity-setting(required='', placeholder='', name='text')
          div#step2.step
            label.slds-form-element__label.slds-p-top_medium(for='lastName')
              abbr.slds-required(title='required')
              | Last Name *
            .slds-form-element__control
              input#lastName.slds-input.js-activity-setting(required='', placeholder='', name='lastName')
          div#step3.step
            label.slds-form-element__label.slds-p-top_medium(for='mobile')
              abbr.slds-required(title='required')
              | Mobile
            .slds-form-element__control
              input#mobile.slds-input.js-activity-setting(placeholder='', name='Mobile')

    footer.slds-card__footer
